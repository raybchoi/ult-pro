<div>
  <h4> User Info </h4>
  <div id='big'>
      <p>First Name: <%= @user.first_name %></p>
      <p>Last Name: <%= @user.last_name %></p>
      <p>Email: <%= @user.email %></p>
      <p>Company: <%= @user.company %></p>
      <p>Current User: <%= current_user.id %></p>
      <p>Current User ID based off of @user: <%= @user.id %></p>
  </div>


  <hr>

  <div class="container create-task">
    <form id='form-create-new-task' name='form-create-new-task'>
      <label for="task-type">Who is this for?</label>

      <select name="taskTypeList" class='tableFor' id="task-type">
        <option value="#tasks_others_owe_me" id='table-type-for-task' class='tasks_others_owe_me'>Someone Else</option>
        <option value="#my_own_tasks" id='table-type-for-task' class='my_own_tasks'>Me</option>
      </select>



      <label for="task-assignee_id">assignee_id</label>

      <div id='task-assignee_id' class="inputor" contentEditable="true" autocomplete="off" data-role='tagsinput'></div>


      <label for="task-title">Title</label>
      <input type='text' id='task-title' autocomplete="off" maxlength=25 required/>

      <label for="task-description">Description</label>
      <input type='text' id='task-description' maxlength=200 autocomplete="off"  required/>

      <label for="create-task-date-picker">When is this due?</label>
      <input type='text' id="create-task-date-picker" autocomplete="off"  placeholder='mm/dd/yyyy' required>

      <!-- <label for="task-owner_id">owner_id</label> -->
      <!-- <input type='number' id='task-owner_id' maxlength=25/> -->

      <!-- <label for="task-creator_id">creator_id</label>
      <input type='number' id='task-creator_id' maxlength=25/> -->

      <button type='submit' class='btn create-task-button'>Create New Task</button>
    </form>
  </div>

  <%= render '/users/tasks'%>

</div>
