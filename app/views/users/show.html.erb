<div>
  <hr>
  <section class='section-create-task'>
    <div class="create-task">
      <form id='form-create-new-task' name='form-create-new-task'>
        <label for="task-type">Who is this for?</label>

        <select class='selectpicker' name="taskTypeList" id="task-type">
          <option value="#tasks_others_owe_me" id='table-type-for-task' class='tasks_others_owe_me'>Someone Else</option>
          <option value="#my_own_tasks" id='table-type-for-task' class='my_own_tasks'>Me</option>
        </select>

        <label for="task-assignee_id">assignee_id</label>
        <div id='div-task-assignee' class="div-assign-task" contenteditable="true" autocomplete="off" required></div>

        <label for="task-title">Title</label>
        <input type='text' id='task-title' autocomplete="off" maxlength=25 required/>

        <label for="task-description">Description</label>
        <input type='text' id='task-description' maxlength=200 autocomplete="off"  required/>

        <label for="create-task-date-picker">When is this due?</label>
        <input type='text' id="create-task-date-picker" autocomplete="off"  placeholder='mm/dd/yyyy' required>
        <button type='submit' class='btn create-task-button'>Create New Task</button>
      </form>
    </div>
  </section>

  <section class='section-assigned-tasks section-tasks col-12'>
    <h2 class='h2-task-header'>Tasks Assigned To Me</h2>
    <div class='tasks_assigned_to_me_div div-tasks'>
      <table id="tasks_assigned_to_me"></table>
    </div>
  </section>

  <section class='section-others-tasks section-tasks col-12'>
    <h2 class='h2-task-header'>Tasks Others Owe Me</h2>
    <div class='tasks_others_owe_me_div div-tasks'>
      <table id="tasks_others_owe_me"></table>
    </div>
  </section>

  <section class='section-others-tasks section-tasks'>
    <h2 class='h2-task-header'>Tasks Created For Myself</h2>
    <div class='tasks_created_for_myself_div div-tasks'>
      <table id="my_own_tasks"></table>
    </div>
    <hr>
  </section>

</div>
