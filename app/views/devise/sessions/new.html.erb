<div class='row'>
  <div class='col-lg-4 col-sm-4 log-in'>
<h2 class='devise-label'>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, :class => 'devise-label'%><br />
    <%= f.email_field :email, autofocus: true, :class => 'devise-type-in' %>
  </div>

  <div class="field">
    <%= f.label :password, :class => 'devise-label' %><br />
    <%= f.password_field :password, autocomplete: "off", :class => 'devise-type-in' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, :class => 'devise-label' %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", :class => 'btn devise-login-button'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
<div class='col-lg-8 col-sm-8 banner'>
  <h1>Welcome to Ult Pro!</h1>
  <h2>We make you productive by letting you focus on you by handling tasks that others owe you.</h2>
</div>
</div>
