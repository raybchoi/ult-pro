<!DOCTYPE html>
<html>
  <head>
    <title>UltPro</title>
    <%= csrf_meta_tags %>



    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <!-- CSS -->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Khula" rel="stylesheet">

    <!-- JS Bootstrap 3.3.7 and Bootstrap table and editable-->
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

    <nav class="navbar navbar-light navbar-static-top" style="background-color: #FEFFC3; margin-bottom: 0%;">
      <div class="container">
        <div class="navbar-header">
          <%= link_to 'Ult Pro', root_path, class: 'navbar-brand' %>
        </div>
        <div id="navbar">
          <!-- <ul class="nav navbar-nav">
            <li><%= link_to 'Home', root_path %></li>
          </ul> -->
          <ul class="nav navbar-nav pull-right">
            <% if user_signed_in? %>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <%= current_user.first_name %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'Profile', edit_user_registration_path %></li>
                <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
            <% else %>
            <li><%= link_to 'Log In', new_user_session_path %></li>
            <li><%= link_to 'Sign Up', new_user_registration_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>




    <div>
      <div class='div-date-time-user-info'>
        <section class='section-date-time-user-info'>
            <h1 class='welcome-name'>Hi, <%= @user.first_name %> <h1>
            <div class="date front-page" id='date'></div>
            <div class="clock front-page"></div>
        </section>
      </div>
    </div>

    <div class='container'>


        <%= yield %>

    </div>

  </body>
</html>
