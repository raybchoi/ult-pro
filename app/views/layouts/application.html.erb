<!DOCTYPE html>
<html>
<head>
  <title>UltPro</title>
  <%= csrf_meta_tags %>

  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <!-- CSS -->
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <link href="https://fonts.googleapis.com/css?family=Khula" rel="stylesheet">
  <!-- <link href="//cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/css/bootstrap-editable.css" rel="stylesheet"/> -->
  <!-- JS Bootstrap 3.3.7 and Bootstrap table and editable-->
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</head>

<body>
<!-- <body class="has-drawer <%= user_signed_in? ? 'normal-bg' : 'alt-bg'%>"> -->
<nav class="navbar navbar-default navbar-static-top">
  <div class="container nav-bar-container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only nav-bar-toggle-span">Toggle navigation</span>
        <span class="icon-bar nav-bar-toggle-span"></span>
        <span class="icon-bar nav-bar-toggle-span"></span>
        <span class="icon-bar nav-bar-toggle-span"></span>
      </button>
      <a class="navbar-brand" href="/users/sign_up">
        Ult Pro
      </a>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          <%= current_user.first_name %>
          <span class="caret"></span>
          </a>
          <ul class="dropdown-menu dropdown-for-nav-bar" role="menu">
          <li><%= link_to 'Edit Profile', edit_user_registration_path, :class => 'nav-bar-user-info' %></li>
          <li><%= link_to 'Team', users_path, :class => 'nav-bar-user-info' %></li>
          <li><%= link_to 'Log out', destroy_user_session_path, method: :delete, :class => 'nav-bar-user-info' %></li>
          </ul>
        </li>
        <% else %>
        <li><%= link_to 'Log In', new_user_session_path, :class => 'nav-bar-user-info' %></li>
        <li><%= link_to 'Sign Up', new_user_registration_path, :class => 'nav-bar-user-info' %></li>
        <% end %>
      </ul>
    </ul>
  </div><!-- /.navbar-collapse -->
</div><!-- /.container-fluid -->
</nav>

  <% if @show_header %>
    <div>
      <div class='div-date-time-user-info'>
        <section class='section-date-time-user-info'>
          <h1 class='welcome-name'>Hi, <%= current_user.first_name %> <h1>
            <div class="date front-page" id='date'></div>
            <div class="clock front-page"></div>
        </section>
      </div>
    </div>

    <div class='container'>
      <%= yield %>
    </div>


  <% else %>
    <div class='div-user-not-logged-in'>
      <section class='section-user-not-logged-in'>
        <div class='container'>
          <%= yield %>
        </div>
      </section>
    </div>

  <% end %>



</body>
</html>
